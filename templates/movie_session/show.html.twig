{% extends 'base.html.twig' %}

{% block title %}Hello MovieSessionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h4>Фильм {{ movieSession.film.name }}</h4>
    <p>дата показа {{ movieSession.getFormatDateStart }}</p>
    <p>начало в {{ movieSession.getFormatTimeStart }}</p>
    <p>конец в {{ movieSession.getFormatTimeEnd }}</p>
    <p>осталось билетов {{ movieSession.maximumCountOfTickets - tickets|length }}</p>


    {{ form(client_form) }}

</div>
{% endblock %}
